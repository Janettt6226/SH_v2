<%= form_tag({ controller: 'games', action: 'update_players' }, method: :patch) do %>
  <% @players.each do |player| %>
    <%= hidden_field_tag "players[][id]", player.id %>
    <%= hidden_field_tag "players[][party]", player.party %>
    <%= hidden_field_tag "players[][role]", player.role %>
  <% end %>
  <%= submit_tag "Assign Roles & Parties" %>
<% end %>

